<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_side_navigation_top"
    android:padding="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.dpagliotto.gimb.components.CustomTextViewPrimary
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:paddingTop="16dp"
        android:text="@string/app_name_lower"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imgNavHeaderAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/txtNavHeaderName"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/nav_header_vertical_spacing" />

    <com.dpagliotto.gimb.components.CustomTextViewPrimary
        android:id="@+id/txtNavHeaderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNavHeaderEmail"
        android:text="Nome do cara"
        android:layout_alignParentStart="true" />

    <com.dpagliotto.gimb.components.CustomTextViewPrimary
        android:id="@+id/txtNavHeaderEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="emaildocara@email.com"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
